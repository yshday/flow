# Production Environment Configuration for Docker Deployment
# Copy this file to .env and update the values before deploying

# ===========================================
# Database Configuration
# ===========================================
DB_NAME=issuetracker
DB_USER=postgres
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_PORT=5432

# ===========================================
# Redis Configuration
# ===========================================
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION
REDIS_PORT=6379

# ===========================================
# JWT Secrets (REQUIRED - MUST CHANGE)
# ===========================================
# Generate with: openssl rand -base64 32
JWT_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET
JWT_REFRESH_SECRET=CHANGE_ME_GENERATE_RANDOM_SECRET

# JWT Token TTL (in seconds)
JWT_ACCESS_TTL=900        # 15 minutes
JWT_REFRESH_TTL=604800    # 7 days

# ===========================================
# Server Configuration
# ===========================================
SERVER_PORT=8080

# ===========================================
# Storage Configuration
# ===========================================
STORAGE_MAX_FILE_SIZE=10485760  # 10MB in bytes

# ===========================================
# Rate Limiting
# ===========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60

# ===========================================
# SMTP Email Configuration (Optional)
# ===========================================
# Leave empty to disable email notifications
SMTP_HOST=
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM=noreply@issuetracker.com
